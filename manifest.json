{
  "name": "daemon-xp",
  "description": "Handles XP for users.",
  "skipBotEvents": false,
  "ubiquity:listeners": ["issues.unassigned", "issue_comment.created", "pull_request_review_comment.created", "pull_request_review.submitted"],
  "commands": {
    "xp": {
      "ubiquity:example": "/xp username",
      "description": "Gets the XP for a user. If no user is specified, the user who invoked the command will be used.",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    }
  },
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "disableCommentPosting": {
        "description": "Set to true to prevent XP updates from being posted back to GitHub.",
        "default": false,
        "type": "boolean"
      }
    }
  },
  "homepage_url": "https://daemon-xp-feat-xp-tracker.deno.dev"
}
