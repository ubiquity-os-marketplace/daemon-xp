{
  "name": "@ubiquity-os/daemon-xp",
  "version": "1.0.0",
  "description": "Handles XP for users.",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "main": "src/worker.ts",
  "type": "module",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "format": "run-p format:*",
    "check-formatting": "run-p check-formatting:* format:cspell",
    "check-formatting:lint": "eslint --fix-dry-run",
    "format:lint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "check-formatting:prettier": "prettier --check .",
    "format:cspell": "cspell **/*",
    "knip": "knip --config .github/knip.ts",
    "knip-ci": "knip --no-exit-code --reporter json --config .github/knip.ts",
    "test": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --setupFiles dotenv/config --coverage",
    "dev": "bun run --port 4000 --no-clear-screen --watch src/worker.ts",
    "prepare": "husky && bun run supabase:generate:remote",
    "supabase-types": "cross-env-shell supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > src/adapters/supabase/generated-types.ts",
    "supabase:generate:remote": "dotenv -- bun run supabase-types"
  },
  "keywords": [
    "typescript",
    "template",
    "dao",
    "ubiquity",
    "open-source"
  ],
  "dependencies": {
    "@sinclair/typebox": "0.34.41",
    "@supabase/supabase-js": "^2.74.0",
    "@ubiquity-os/plugin-sdk": "3.3.4",
    "@ubiquity-os/ubiquity-os-logger": "^1.4.0",
    "decimal.js": "^10.6.0",
    "ethers": "^6.15.0",
    "hono": "^4.9.10",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@cspell/dict-node": "5.0.6",
    "@cspell/dict-software-terms": "4.2.4",
    "@cspell/dict-typescript": "3.2.0",
    "@eslint/js": "9.19.0",
    "@jest/globals": "29.7.0",
    "@mswjs/data": "0.16.2",
    "@types/jest": "^29.5.14",
    "@types/node": "22.12.0",
    "cross-env": "^7.0.3",
    "cross-env-shell": "^7.0.3",
    "cspell": "8.17.3",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "9.19.0",
    "eslint-plugin-check-file": "3.0.0",
    "eslint-plugin-sonarjs": "3.0.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-md-dashboard": "0.8.0",
    "knip": "5.43.6",
    "lint-staged": "15.4.3",
    "msw": "^2.11.5",
    "npm-run-all": "4.1.5",
    "prettier": "3.4.2",
    "supabase": "^2.51.0",
    "ts-jest": "29.2.5",
    "typescript": "5.6.2",
    "typescript-eslint": "8.22.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**.{ts,json}": [
      "cspell"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
